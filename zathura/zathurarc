# General settings-------------------------------------
set default-bg                  "#303446"
set default-fg                  "#c6d0f5"
set font 						"JetBrainsMono Nerd Font Propo Regular 10"
set page-padding				1
set selection-clipboard 		clipboard
set selection-notification		false
set database					"sqlite"
#------------------------------------------------------

# Statusbar settings-----------------------------------
set statusbar-bg                "#8caaee"
set statusbar-fg                "#303446"
set statusbar-h-padding			12
set statusbar-v-padding			5
set statusbar-page-percent		true
set statusbar-home-tilde		true
#------------------------------------------------------

# Inputbar settings------------------------------------
set inputbar-bg                 "#292c3c"
set inputbar-fg                 "#c6d0f5"
#------------------------------------------------------

# Completion settings----------------------------------
set n-completion-items			10
set completion-group-bg         "#292c3c"
set completion-group-fg         "#c6d0f5"
set completion-bg               "#292c3c"
set completion-fg               "#c6d0f5"
set completion-highlight-bg     "#8caaee"
set completion-highlight-fg     "#303446"
#------------------------------------------------------

# Notification settings--------------------------------
set notification-error-bg       "#292c3c"
set notification-error-fg       "#e78284"
set notification-warning-bg     "#292c3c"
set notification-warning-fg     "#e5c890"
set notification-bg             "#292c3c"
set notification-fg             "#c6d0f5"
#------------------------------------------------------

# Index settings---------------------------------------
set index-bg                    "#303446"
set index-fg                    "#c6d0f5"
set index-active-bg             "#8caaee"
set index-active-fg             "#303446"
#------------------------------------------------------

# Highlight settings-----------------------------------
set highlight-color             "rgba(166, 209, 137, 0.6)"
set highlight-fg                "rgba(48, 52, 70, 1)"
set highlight-active-color      "rgba(231, 130, 132, 0.6)"
#------------------------------------------------------

# Recolor settings-------------------------------------
set recolor-lightcolor          "#303446"
set recolor-darkcolor           "#c6d0f5"
set recolor-keephue             true
#------------------------------------------------------

# Keybindings------------------------------------------
# Map and remap keybinds
map f adjust_window best-fit
map w adjust_window width
map = zoom in
map <C-=> zoom default
map <C-s> toggle_statusbar
map <C-r> reload
map <C-i> recolor
map <C-Right> rotate rotate-cw
map <S-r> rotate rotate-ccw
map <C-Left> rotate rotate-ccw

# Unmap keybinds
unmap a
unmap s
unmap q
unmap <C-q>
unmap <C-n>

# set guioptions ''
#------------------------------------------------------
