set default-bg                  "#eff1f5"
set default-fg                  "#4c4f69"
set font 						"JetBrainsMono Nerd Font Propo Medium 10"
set page-padding				3
set selection-clipboard 		clipboard
set selection-notification		false
set database					"sqlite"

set statusbar-bg                "rgba(23, 146, 153, 1)"
set statusbar-fg                "#eff1f5"
set statusbar-h-padding			12
set statusbar-v-padding			5
set statusbar-page-percent		true
set statusbar-home-tilde		true

set inputbar-bg                 "#eff1f5"
set inputbar-fg                 "#4c4f69"

set n-completion-items			10
set completion-group-bg         "#e6e9ef"
set completion-group-fg         "#4c4f69"
set completion-bg               "#e6e9ef"
set completion-fg               "#4c4f69"
set completion-highlight-bg     "#179299"
set completion-highlight-fg     "#eff1f5"

set notification-error-bg       "#eff1f5"
set notification-error-fg       "#d20f39"
set notification-warning-bg     "#eff1f5"
set notification-warning-fg     "#d20f39"
set notification-bg             "#eff1f5"
set notification-fg             "#179299"

set index-bg                    "#eff1f5"
set index-fg                    "#4c4f69"
set index-active-bg             "#dce0e8"
set index-active-fg             "#179299"

set highlight-color             "rgba(23, 146, 153, 0.4)"
set highlight-fg                "rgba(76, 79, 105, 1)"
set highlight-active-color      "rgba(210, 15, 57, 0.4)"

set recolor-lightcolor          "#eff1f5"
set recolor-darkcolor           "#4c4f69"

map f adjust_window best-fit
map w adjust_window width
map = zoom in
map <C-=> zoom in
map <C--> zoom out
map 0 zoom default
map <C-0> zoom default
map <C-r> reload
map <C-i> recolor
map <C-Right> rotate rotate-cw
map <C-Left> rotate rotate-ccw
map <C-f> focus_inputbar "/"

unmap a
unmap s
unmap q
unmap <C-q>
