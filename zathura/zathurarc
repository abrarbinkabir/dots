# General settings-------------------------------------
set default-bg                  "#1e1e2e"
set default-fg                  "#cdd6f4"
set font 						"JetBrainsMono Nerd Font Propo Regular 10"
set page-padding				3
set selection-clipboard 		clipboard
set selection-notification		false
set database					"sqlite"
#------------------------------------------------------

# Statusbar settings-----------------------------------
set statusbar-bg                "#89b4fa"
set statusbar-fg                "#1e1e2e"
set statusbar-h-padding			12
set statusbar-v-padding			5
set statusbar-page-percent		true
set statusbar-home-tilde		true
#------------------------------------------------------

# Inputbar settings------------------------------------
set inputbar-bg                 "#1e1e2e"
set inputbar-fg                 "#cdd6f4"
#------------------------------------------------------

# Completion settings----------------------------------
set n-completion-items			10
set completion-group-bg         "#181825"
set completion-group-fg         "#cdd6f4"
set completion-bg               "#181825"
set completion-fg               "#cdd6f4"
set completion-highlight-bg     "#a6e3a1"
set completion-highlight-fg     "#1e1e2e"
#------------------------------------------------------

# Notification settings--------------------------------
set notification-error-bg       "#f38ba8"
set notification-error-fg       "#1e1e2e"
set notification-warning-bg     "#f38ba8"
set notification-warning-fg     "#1e1e2e"
set notification-bg             "#a6e3a1"
set notification-fg             "#1e1e2e"
#------------------------------------------------------

# Index settings---------------------------------------
set index-bg                    "#1e1e2e"
set index-fg                    "#cdd6f4"
set index-active-bg             "#89b4fa"
set index-active-fg             "#1e1e2e"
#------------------------------------------------------

# Highlight settings-----------------------------------
set highlight-color             "rgba(166, 227, 161, 0.6)"
set highlight-fg                "rgba(30, 30, 46, 1)"
set highlight-active-color      "rgba(243, 139, 168, 0.6)"
#------------------------------------------------------

# Recolor settings-------------------------------------
set recolor-lightcolor          "#1e1e2e"
set recolor-darkcolor           "#cdd6f4"
set recolor-keephue             true
#------------------------------------------------------

# Keybindings------------------------------------------
# Map and remap keybinds
map f adjust_window best-fit
map w adjust_window width
map = zoom in
map <C-=> zoom in
map <C--> zoom out
map <C-0> zoom default
map <C-r> reload
map <C-i> recolor
map <C-Right> rotate rotate-cw
map <C-Left> rotate rotate-ccw

# Unmap keybinds
unmap a
unmap s
unmap q
unmap <C-q>
#------------------------------------------------------
